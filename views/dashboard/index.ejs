<div class="container-fluid constain-fluid-custom pb-5 mb-5">

  <div class="row mb-4">
    <div class="col">
      <h1>hey <%= user  %> </h1>
    </div>
    <div class="col text-end">
      <a href="/dashboard/add" class="btn btn-primary">+Notes</a>
    </div>
  </div>
  <div class="row">

    <% if(notes.length>0) { for (var i =0; i < notes.length; i++) { %>
    <div class="col-sm-3 mb-4">

      <div class="card border-primary" style="min-height: 210px;">
        <a href="/dashboard/item/<%= notes[i]._id %>" class="card-body text-decoration-none">
        <h5 class="card-title"><%= notes[i].title %></h5>
        <p class="card-title"><%= notes[i].body %></p>
        </a>
      </div>

    </div>


    <% }} else{ %>
        <div class="row d-flex justify-content-center align-item-center">
            <div class="col-3 ">
                <h2>okay...</h2>
                <h4>lets start with your new notes</h4>
                <a href="/dashboard/add">Create one</a>
            </div>
        </div>
<% } %>
  </div>




</div>